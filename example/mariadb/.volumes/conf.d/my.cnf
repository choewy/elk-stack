[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4

[mysqld]
character-set-client-handshake=FALSE
character-set-server=utf8mb4
collation-server=utf8mb4_general_ci

[mysqldump]
default-character-set=utf8mb4

[mariadb]
slow_query_log
slow_query_log_file=/var/log/mysql/slow_query.log
long_query_time=1.0
innodb_strict_mode=OFF
